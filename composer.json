{
    "name": "brotkrueml/schema-virtuallocation",
    "type": "typo3-cms-extension",
    "description": "Add-on to the TYPO3 schema extension, providing pending type VirtualLocation",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "keywords": [
        "TYPO3 CMS",
        "TYPO3 extension",
        "JSON-LD",
        "Structured data",
        "SEO",
        "schema.org"
    ],
    "require": {
        "php": ">=7.2",
        "typo3/cms-core": "^10.4.11 || ^11.5 || ^12.0",
        "brotkrueml/schema": "^1.7 || ^2.0"
    },
    "require-dev": {
        "brotkrueml/coding-standards": "~2.0.2"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\SchemaVirtualLocation\\": "Classes/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "schema_virtuallocation",
            "app-dir": ".Build",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "fix-cs": ".Build/bin/ecs --fix",
        "zip": "grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'mkdir -p ../zip; git archive -v -o \"../zip/${PWD##*/}_{version}.zip\" v{version}'"
    }
}
